<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/transparent_pixel"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/score1"
        android:layout_width="39dp"
        android:layout_height="48dp"
        android:background="@color/redColor"
        android:contentDescription="Image correct or false"
        />

    <TextView
        android:id="@+id/resultAntwTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"        
        android:background="#F2F2F2"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:paddingRight="8dp"
        android:text="@string/resultAnswer"
        android:textColor="#515151"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/answerTextTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:layout_weight="2"
        android:background="#F2F2F2"
        android:gravity="center|left"
        android:paddingRight="15dp"
        android:text="@string/NEE"
        android:textColor="#515151"
        android:textSize="21dp" />

    <ImageView
        android:id="@+id/score2"
        android:layout_width="16dp"
        android:layout_height="48dp"
        android:background="@color/redColor"
        android:contentDescription="Image correct or false"
        />

</LinearLayout>

