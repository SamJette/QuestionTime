<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutTabLeerlingen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/grey"
        android:gravity="right" >

        <TextView
            android:id="@+id/questionResults"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="47dp"
            android:layout_weight="7"
            android:gravity="left|center"
            android:paddingLeft="15dp"
            android:shadowColor="@color/darkGrey"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@color/white"
            android:textSize="21dp" />

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:onClick="onStop"
            android:paddingRight="15dp"
            android:shadowColor="@color/darkGrey"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/stop"
            android:textColor="@color/white"
            android:textSize="21dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/background_dkgray"
        android:orientation="vertical" >
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/listViewTabResultaten"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:childDivider="#d1d1d1"
        android:divider="#d1d1d1"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" >
    </ExpandableListView>

</LinearLayout>