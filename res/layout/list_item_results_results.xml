<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/transparent_pixel"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/score1"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@color/redColor"
        android:contentDescription="Image correct or false"
        android:src="@drawable/transparent_pixel" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:layout_weight="7" >
        
        <TextView
        android:id="@+id/questionTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"        
        android:layout_weight="6" 
        android:layout_marginLeft="0dp"
        android:background="#F2F2F2"
        android:gravity="center|left" 
        android:paddingLeft="15dp"       
        android:text="bv. ''Is een vlinder een vogel?''"
        android:textColor="#515151"
        android:textSize="21dp"/>

        <TextView
            android:id="@+id/answerTextTextView"
            android:layout_width="0dp"
        	android:layout_height="match_parent"  
            android:layout_weight="2"
            android:gravity="center|right"
            android:paddingRight="5dp"           
            android:text="@string/NEE"
            android:textColor="#515151"
            android:textSize="21dp"  
            android:background="#F2F2F2"
            android:layout_marginRight="0dp"/>

    </LinearLayout>
   
       <ImageView
           android:id="@+id/score2"
           android:layout_width="16dp"
           android:layout_height="match_parent"
           android:background="@color/redColor"
           android:contentDescription="Image correct or false"
           android:src="@drawable/transparent_pixel" />

</LinearLayout>